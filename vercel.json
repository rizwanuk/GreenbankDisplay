{
  "version": 2,
  "framework": "vite",
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "crons": [
    { "path": "/api/push/cron", "schedule": "0 5 * * *" }
  ],

  "redirects": [
    { "source": "/mobile", "destination": "/mobile/", "permanent": false }
  ],

  "headers": [
    {
      "source": "/mobile/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" },
        { "key": "Service-Worker-Allowed", "value": "/mobile/" }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    },
    {
      "source": "/mobile/manifest.webmanifest",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/mobile/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    }
  ],

  "rewrites": [
    { "source": "/api/met/(.*)", "destination": "/api/met.js?path=$1" },
    { "source": "/embed", "destination": "/embed.html" },
    { "source": "/slideshow", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
