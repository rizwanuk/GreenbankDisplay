{
  "version": 2,
  "framework": "vite",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "crons": [],

  "redirects": [
    { "source": "/mobile", "destination": "/mobile/", "permanent": false }
  ],

  "headers": [
    {
      "source": "/mobile/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, max-age=0" },
        { "key": "Service-Worker-Allowed", "value": "/mobile/" }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, max-age=0" },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    },
    {
      "source": "/mobile/",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, max-age=0" }
      ]
    },
    {
      "source": "/mobile/manifest.webmanifest",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, max-age=0" }
      ]
    },
    {
      "source": "/mobile/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, max-age=0" }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, max-age=0" }
      ]
    }
  ],

  "rewrites": [
    { "source": "/api/met/(.*)", "destination": "/api/met.js?path=$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },

    { "source": "/embed", "destination": "/embed.html" },
    { "source": "/slideshow", "destination": "/index.html" },

    // ✅ Do NOT send Quran PDFs to the SPA
    { "source": "/quran/(.*)", "destination": "/quran/$1" },

    // ✅ (Optional but good) Do NOT send common static assets to SPA
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)\\.(pdf|png|jpg|jpeg|webp|gif|svg|ico|css|js|map|txt|xml|json|webmanifest)", "destination": "/$1" },

    // ✅ SPA fallback last
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
